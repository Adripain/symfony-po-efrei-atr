{% extends 'base.html.twig' %}

{% block title %}Détails du Chercheur{% endblock %}

{% block body %}
    <h1>Détails du Chercheur</h1>
    <p><strong>Nom :</strong> {{ researcher.name }}</p>
    <p><strong>Spécialisation :</strong> {{ researcher.specialization }}</p>

    <a href="{{ path('researcher_edit', {id: researcher.id}) }}">Modifier</a>
    <form method="post" action="{{ path('researcher_delete', {id: researcher.id}) }}" style="display:inline;">
        <button type="submit">Supprimer</button>
    </form>
    <a href="{{ path('researcher_list') }}">Retour à la liste</a>
{% endblock %}
